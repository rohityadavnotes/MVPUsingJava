<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exitAlertDialogLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/purple"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/confirm_exit"
            android:textAppearance="@style/BoldFont20"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/are_you_sure_you_want_to_exit"
            android:textAppearance="@style/RegularFont10"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/noButtonTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:shadowColor="@android:color/transparent"
            android:text="@string/no"
            android:textAppearance="@style/BoldFont20"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/yesButtonTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:shadowColor="@android:color/transparent"
            android:text="@string/yes"
            android:textAppearance="@style/BoldFont20"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>